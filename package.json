{
  "name": "web_tool",
  "version": "0.0.2",
  "description": "web tool",
  "main": "server.js",
  "dependencies": {
    "async": "^2.1.4",
    "feedparser": "^2.1.0",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "eslint": "^3.13.1",
    "node-sass": "^4.0.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "uglify-js": "^3.0.0"
  },
  "scripts": {
    "dev": "nodemon -d 3 -e js,scss,html,php,tag -w SRC/ SRC/server.js;",
    "ws": "nodemon -d 3 -e js -w SRC/websocket.js SRC/websocket.js",
    "lint": "eslint UTL/server.js SRC/*.js",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzfang/WebTool.git"
  },
  "keywords": [
    "web",
    "tool"
  ],
  "author": "RZ Fang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rzfang/WebTool/issues"
  },
  "homepage": "https://github.com/rzfang/WebTool#readme",
  "pre-commit": [ "lint" ],
  "eslintConfig": {
    "env": { "browser": true, "es6": true, "node": true },
    "extends": "eslint:recommended",
    "parserOptions": { "sourceType": "module" },
    "rules": {
      "linebreak-style": [ "error", "unix" ],
      "no-cond-assign": "off",
      "no-console": [ "warn", { "allow": [ "warn", "error" ]}],
      "no-redeclare": [ "warn", { "builtinGlobals": true }],
      "no-unused-vars": [ "warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
      "semi": [ "error", "always" ]
    }
  }
}
