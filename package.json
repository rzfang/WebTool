{
  "name": "web_tool",
  "version": "0.1.0",
  "description": "web tool",
  "main": "server.js",
  "dependencies": {
    "@riotjs/compiler": "^4.5.1",
    "@riotjs/hydrate": "^4.0.0",
    "@riotjs/ssr": "^4.1.1",
    "async": "^2.6.2",
    "busboy": "^0.3.1",
    "feedparser": "^2.2.9",
    "request": "^2.88.0",
    "riot": "^4.6.5"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-plugin-json": "^1.4.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "pre-commit": "^1.2.2",
    "uglify-js": "^3.6.0"
  },
  "scripts": {
    "dev": "nodemon -d 3 -e js,scss,html,tag,riot -w SRC/ SRC/RZ-Nd-HTTPServer.js;",
    "ws": "nodemon -d 3 -e js -w SRC/websocket.js SRC/websocket.js",
    "lint": "eslint --ext .js,.json UTL/ SRC/",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzfang/WebTool.git"
  },
  "keywords": [
    "web",
    "tool"
  ],
  "author": "RZ Fang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rzfang/WebTool/issues"
  },
  "homepage": "https://github.com/rzfang/WebTool#readme",
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "plugins": [
      "json"
    ],
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-cond-assign": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-redeclare": [
        "warn",
        {
          "builtinGlobals": true
        }
      ],
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false
        }
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
